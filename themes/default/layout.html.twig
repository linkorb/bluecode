<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0" />
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- link rel="icon" href="../../favicon.ico" -->

        <title>BlueCode</title>

        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="{{ path('assets', { 'postfix': '/bower/bootstrap/dist/css/bootstrap.min.css' }) }}">
        <link rel="stylesheet" href="{{ path('assets', { 'postfix': '/bower/font-awesome/css/font-awesome.min.css' }) }}">
        <link rel="stylesheet" href="{{ path('assets', { 'postfix': '/bower/bootswatch-dist/css/bootstrap.min.css' }) }}">

        <link href='https://fonts.googleapis.com/css?family=Architects+Daughter' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ path('assets', { 'postfix': '/style.css' }) }}">
    </head>
    <body>
        <!-- Fixed navbar -->
        {#
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('frontpage' )}}">BlueCode</a>
                </div>
                
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('frontpage' )}}">Frontpage</a></li>
                        <li><a href="{{ path('projects_index' )}}">Projects</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if current_user is defined %}
                            <li><a href="{{ path('frontpage' )}}">{{ current_user.getDisplayName }}</a></li>
                            <li><a href="{{ path('logout' )}}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('login' )}}">Login</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
        #}

        <div class="container" id="content">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    {% if project is defined %}
                        <div style="border: 2px solid #ffffff; padding: 10px; border-radius: 15px; background: rgba(255, 255, 255, 0.2);">
                            <h1>{{ project.getCode() }}: {{project.getName()}}</h1>
                            <p class="lead">{{project.getSummary}}</p>
                            <a class="btn btn-default" href="{{ path('projects_view', { 'projectCode': project.getCode() })}}">Home</a>
                            <a class="btn btn-default"  href="{{ path('projects_routes_index', { 'projectCode': project.getCode() })}}">Routes</a>
                            <a class="btn btn-default"  href="{{ path('projects_tables_index', { 'projectCode': project.getCode() })}}">Schema</a>
                        </div>
                    
                        
                    {% endif %}
                    {% block content %}{% endblock %}
                </div>
                <div class="col-md-2"></div>
            </div>
        </div> <!-- /container -->

        {#
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        &copy; 2015 LinkORB Engineering
                    </div>
            </div>
        </footer>
        #}

        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ path('assets', { 'postfix': '/bower/jquery/dist/jquery.min.js' }) }}"></script>
        <script src="{{ path('assets', { 'postfix': '/bower/bootstrap/dist/js/bootstrap.min.js' }) }}"></script>
        <script src="{{ path('assets', { 'postfix': '/js/app.js' }) }}"></script>

    </body>
</html>
